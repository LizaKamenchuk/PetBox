<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".AllAboutAnimalFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="55dp"
        app:layout_collapseMode="pin"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/background"
                android:src="@drawable/ic_arrow_left"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animal"
                android:textSize="20dp"
                android:textColor="@color/greyText"
                android:fontFamily="@font/inriasans_light"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

      <ImageView
          android:id="@+id/photo_animals"
          android:layout_width="270dp"
          android:layout_height="270dp"
          android:layout_marginTop="30dp"
          android:src="@drawable/kotik"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/toolbar" />

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/inriasans_bolditalic"
          android:text="fghjk"
          android:textColor="@color/lightseagreen"
          android:textSize="20dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/photo_animals" />

      <TextView
          android:id="@+id/gender_age"
          style="@style/bulletinText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          android:text="dfghjkl;cvbhnjkl"
          app:layout_constraintLeft_toLeftOf="@id/photo_animals"
          app:layout_constraintTop_toBottomOf="@id/photo_animals" />


      <TextView
          android:text="sdfghjkl;xcvbnm,dcfghjkldcfvgbhnjmk,lxcvbghnjmk,xcvbnmxcvbghnjmksdfghjklertyuiopxdcfvgbhjkcvbnmxdcfvgbhnjmdfghjkldfvghjksdfghjkdsfghjkdcfvgbhnjmkdfghjsdcfvgbhnjmxcvbnmxdcfvbnmfghjkxcvbnmxcvbndfghyjhgfdfgbhnbgfdcfvb"
          android:id="@+id/character"
          style="@style/bulletinText"
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:padding="2dp"
          app:layout_constraintLeft_toLeftOf="@id/gender_age"
          app:layout_constraintTop_toBottomOf="@id/gender_age" />

   <TextView
       android:text="dfghjkldfghjkl"
       android:id="@+id/address"
       style="@style/bulletinText"
       android:layout_marginTop="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="@id/character"
       app:layout_constraintTop_toBottomOf="@id/character"
       />
   <TextView
       android:text="dsfghjkl;sdfghjkl"
       android:id="@+id/contact"
       style="@style/bulletinText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="@id/address"
       app:layout_constraintTop_toBottomOf="@id/address"
       />


</androidx.constraintlayout.widget.ConstraintLayout>