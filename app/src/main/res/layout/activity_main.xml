<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MajorActivity">

    <FrameLayout
        android:id="@+id/fragment_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="14"
       ></FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/menu_place"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_weight="1"
    android:background="@color/lightseagreen"
    app:layout_constraintBottom_toBottomOf="parent">
    <ImageButton
        android:id="@+id/me_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/me"
        android:scaleType="fitXY"
        android:background="@color/lightseagreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:background="@color/lightseagreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClick"
        />
    <ImageButton
        android:id="@+id/help_dtn"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:src="@drawable/help"
        android:scaleType="fitXY"
        android:background="@color/lightseagreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_btn"
        app:layout_constraintRight_toLeftOf="@id/add_btn"
        android:onClick="onClick"
        />
    <ImageButton
        android:id="@+id/add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/addimg"
        android:scaleType="fitXY"
        android:background="@color/lightseagreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClick"
        />
    <ImageButton
        android:id="@+id/book_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/book"
        android:scaleType="fitXY"
        android:background="@color/lightseagreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/add_btn"
        app:layout_constraintRight_toLeftOf="@id/me_btn"
        android:onClick="onClick"
        />
</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>