<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="140dp"
    android:layout_margin="12dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/book_img"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:src="@drawable/kotik"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="sdfghjkl;"
        android:textColor="@color/greyText"
        android:fontFamily="@font/inriasans_bold"
        android:textSize="23sp"
        app:layout_constraintLeft_toRightOf="@id/book_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/book_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="dfghjkl;'gh"
        android:textSize="16sp"
        android:textColor="@color/lightseagreen"
        app:layout_constraintLeft_toLeftOf="@id/book_name"
        app:layout_constraintTop_toBottomOf="@id/book_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>